<div class="mainboard flex col r-8" style="margin-top: .8rem; overflow-x: hidden;">
   <%- include('./profile')%>
   <!-- <%- include('./balances')%> -->
   <div class="card card-bordered">
       <div class="card-inner card-inner-lg flex col">
           <h4 class="nk-block-title" style = "color: var(--my-teal-dark); margin: 1.5rem auto;">Make a Payment</h4>

           <form id="signup" method="post" action="/ajax/payment_review" style="margin: 0 auto;">
           <div class="response" style="display:none"></div>

           <div class="form-group flex col">
               <div class="form-label-group" style="margin: .35rem 0;">
                   <label class="form-label" for="bank" style = "color: var(--my-teal-dark);">Bank Name </label>
               </div>
               <input id="" type="text" autofocus="" class="form-control form-control-lg" name="swift" placeholder="Bank Name" required>
           </div>

           <div class="form-group flex col">
               <div class="form-label-group" style="margin: .35rem 0;">
                   <label class="form-label" for="account_number" style = "color: var(--my-teal-dark);">Account Number </label>
               </div>
               <input id="account_number" type="text" autofocus="" class="form-control form-control-lg" name="account_number" placeholder="Account Number" required>
           </div>

           <div class="form-group flex col">
               <div class="form-label-group" style="margin: .35rem 0;">
                   <label class="form-label" for="person" style = "color: var(--my-teal-dark);">Account Name </label>
               </div>
               <input id="" type="text" autofocus="" class="form-control form-control-lg" name="person" placeholder="Account Name" required>
           </div>
